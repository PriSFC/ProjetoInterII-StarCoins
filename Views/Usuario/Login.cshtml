
@model UsuarioViewModel;

@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">    
</head>
<body class="container">
     <div class="text-center">
        <h1>Login</h1><br/>
     </div>
    


    <form action="/usuario/login" method="POST" class="col offset-md-3 col-6">
    
        @if(ViewBag.Autenticado != null && ViewBag.Autenticado == false) {
            <div class="alert alert-danger">Usuário não reconhecido ou senha inválida.</div>
        }

        <input name="Email" placeholder="Email" class="form-control" /><br/>
        <input type="password" name="Senha" placeholder="Senha" class="form-control" /><br/>
        <div class="d-grid gap-2">
            <button class="btn btn-primary">Entrar</button>
        </div>
    </form>

</body>
</html>