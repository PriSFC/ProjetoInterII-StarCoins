@model List<StarCoins.Models.Usuario>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuários</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">


<div class="text-center">
    <h2>Usuários</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Perfil</th>
                <th scope="col">Login</th>
                <th scope="col">E-mail</th>
                <th scope="col">Senha</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
    @foreach(var usuario in Model) {
        <tr>
            <td>@usuario.UsuarioId</td>
            <td>@usuario.Nome</td>
            <td>@usuario.Perfil</td>
            <td>@usuario.Login</td>
            <td>@usuario.Email</td>
            <td>@usuario.Senha</td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="/usuario/update/@usuario.UsuarioId" button type="button" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"> Editar</a>
                    <a href="/usuario/delete/@usuario.UsuarioId" button type="button" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Apagar</a>
                </div>
            </td>
        </tr>
    }
      </tbody>
    </table>

<a class="btn btn-primary" href="/usuario/create">Adicionar</a>
</div>
</body>
</html>