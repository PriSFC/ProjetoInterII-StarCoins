<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Pedido</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">

    <h2>Detalhes do Pedido</h2>

    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/pedido/read">Pedidos</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detalhes do Pedido</li>
    </ol>
    </nav>

    <!-- Exibição do Card com Informações do Pedido -->
    <div class="card col-8 offset-md-2">
        <div class="card-body">
            <h5 class="card-title">Produto: <span id="produtoNome">Nome do Produto</span></h5>
            <h6 class="card-subtitle mb-2 text-muted">Aluno: <span id="alunoNome">Nome do Aluno</span></h6>
            <p class="card-text">Descrição: <span id="produtoDescricao">Descrição do Produto</span></p>
            <p class="card-text">Valor em Moedas: <span id="produtoMoeda">0</span></p>

            <button class="btn btn-primary" onclick="gerarDocumento()">Baixar Detalhes</button>
            <a class="btn btn-outline-secondary" href="/pedido/read">Voltar</a>
        </div>
    </div>

    <script>
        function gerarDocumento() {
            // Substitua pelos dados reais do pedido
            const codigo = '123456'; // Código de exemplo
            const alunoNome = document.getElementById('alunoNome').innerText;
            const produtoNome = document.getElementById('produtoNome').innerText;

            const conteudo = `Código: ${codigo}\nAluno: ${alunoNome}\nProduto: ${produtoNome}`;

            // Criando o arquivo .txt
            const blob = new Blob([conteudo], { type: 'text/plain' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'detalhes_pedido.txt';
            link.click();
        }
    </script>

</body>
</html>

