@model List<StarCoins.Models.Pedido> // Altere o modelo para Pedido

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meus Pedidos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">

<div class="text-center">
    <h2>Meus Pedidos</h2>

    @if (!Model.Any()) // Verifica se não há pedidos
    {
        <div class="alert alert-warning" role="alert">
            Você ainda não fez nenhum pedido.
        </div>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Produto</th>
                    <th scope="col">Data do Pedido</th>
                    <th scope="col">Moeda</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pedido in Model) {
                    <tr>
                        <td>@pedido.PedidoId</td> <!-- Presumindo que Pedido tem um PedidoId -->
                        <td>@pedido.ProdutoId</td> <!-- Presumindo que Pedido tem uma relação com Produto -->
                        <td>@pedido.DataPedido.ToShortDateString()</td> <!-- Exibe a data do pedido -->
                        <td>@pedido.Moeda</td>
                        <td>@pedido.Status</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="/pedido/details/@pedido.PedidoId" class="btn btn-outline-info btn-sm"><i class="bi bi-eye"></i> Documento</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
</body>
</html>
