@model StarCoins.Models.ProdutoFisico

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Produto Físico</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">

    <h2>Produto Físico</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/produto/read">Produto</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar Produto Físico</li>
        </ol>
    </nav>

    <form action="/produto/updatefisico/@Model.ProdutoId" method="POST" class="col offset-md-2 col-8">
        @Html.HiddenFor(model => model.ProdutoId)
        <div>
            <th scope="col">Nome*</th>
            <input placeholder="Nome" name="Nome" class="form-control" value="@Model.Nome"/>
            @Html.ValidationMessageFor(x => x.Nome)<br>
        </div>
        <div>
            <th scope="col">Descrição*</th>
            <input placeholder="Descrição" name="Descricao" class="form-control" value="@Model.Descricao"/>
            @Html.ValidationMessageFor(x => x.Descricao)<br>
        </div>
        <div>
            <th scope="col">Quantidade*</th>
            <input placeholder="Quantidade" name="Quantidade" class="form-control" value="@Model.Quantidade"/>
            @Html.ValidationMessageFor(x => x.Quantidade)<br>
        </div>
        <div>
            <th scope="col">Moeda*</th>
            <input placeholder="Moeda" name="Moeda" class="form-control" value="@Model.Moeda"/>
            @Html.ValidationMessageFor(x => x.Moeda)<br>
        </div>
        <div>
            <th scope="col">Status*</th>
            <input placeholder="Status" name="Status" class="form-control" value="@Model.Status"/>
            @Html.ValidationMessageFor(x => x.Status)<br>
        </div>
        
        <div>
            <!-- Campo específico para produto físico -->
            <th scope="col">Peso (gramas)*</th>
            <input placeholder="Peso" name="Peso" class="form-control" value="@Model.Peso"/>
            @Html.ValidationMessageFor(x => x.Peso)<br>
        </div>
        
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/produto/read">Voltar</a>
    </form>

</body>
</html>
