@model List<StarCoins.Models.Produto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produtos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">


<div class="text-center">
    <h2>Produtos</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Moeda</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
    @foreach(var produto in Model) {
        <tr>
            <td>@produto.ProdutoId</td>
            <td>@produto.Nome</td>
            <td>@produto.Descricao</td>
            <td>@produto.Quantidade</td>
            <td>@produto.Moeda</td>
            <td>@produto.Status</td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="/produto/update/@produto.ProdutoId" button type="button" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i> Editar</a>
                    <a href="/produto/delete/@produto.ProdutoId" button type="button" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Apagar</a>
                </div>
            </td>
        </tr>
    }
      </tbody>
    </table>

<a class="btn btn-primary" href="/produto/createfisico">Adicionar Produto Físico</a>
<a class="btn btn-primary" href="/produto/createdigital">Adicionar Produto Digital</a>
</div>
</body>
</html>