@model ProdutoDigital;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Produto Digital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">

    <h2>Produtos Digitais</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/produto/read">Produtos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cadastrar Produto Digital</li>
        </ol>
    </nav>

    <form asp-action="CreateDigital" method="POST" class="col offset-md-2 col-8">
        <!-- Campos comuns -->
        <div class="mb-3">
            <label for="Nome" class="form-label">Nome*</label>
            <input type="text" name="Nome" placeholder="Digite o Nome" class="form-control" />
            @Html.ValidationMessageFor(x => x.Nome)<br>
        </div>
        
        <div class="mb-3">
            <label for="Descricao" class="form-label">Descrição*</label>
            <input type="text" name="Descricao" placeholder="Digite a Descrição" class="form-control" />
            @Html.ValidationMessageFor(x => x.Descricao)<br>
        </div>
        
        <div class="mb-3">
            <label for="Moeda" class="form-label">Moedas*</label>
            <input type="number" name="Moeda" placeholder="Digite o Valor em Moedas" class="form-control" />
            @Html.ValidationMessageFor(x => x.Moeda)<br>
        </div>
        
        <div class="mb-3">
            <label for="Quantidade" class="form-label">Quantidade*</label>
            <input type="number" name="Quantidade" placeholder="Digite a Quantidade" class="form-control" />
            @Html.ValidationMessageFor(x => x.Quantidade)<br>
        </div>

        <div class="mb-3">
            <label for="Status" class="form-label">Status*</label>
            <input type="number" name="Status" placeholder="Escolha o Status (1 - em estoque, 2 - esgotado, 3 - descontinuado, 4 - em trânsito)" class="form-control" />
            @Html.ValidationMessageFor(x => x.Status)<br>
        </div>

        <!-- Campo específico de produto digital -->
        <div class="mb-3">
            <label for="TamanhoArquivo" class="form-label">Tamanho do Arquivo (MB)*</label>
            <input type="number" name="TamanhoArquivo" placeholder="Digite o Tamanho do Arquivo" class="form-control" />
            @Html.ValidationMessageFor(x => x.TamanhoArquivo)<br>
        </div>

        

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/produto/read">Voltar</a>
    </form>

</body>
</html>

