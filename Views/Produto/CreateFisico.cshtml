@model StarCoins.Models.ProdutoFisico

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Produtos Físicos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">

    <h2>Produtos Físicos</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/produto/read">Produtos</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cadastrar um Produto Físico</li>
        </ol>
    </nav>

    <form asp-action="CreateFisico" method="POST" class="col offset-md-2 col-8">
        <!-- Campos comuns -->
        <div class="mb-3">
            <label for="Nome" class="form-label">Nome</label>
            <input type="text" name="Nome" placeholder="Digite o Nome" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label for="Descricao" class="form-label">Descrição</label>
            <input type="text" name="Descricao" placeholder="Digite a Descrição" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label for="Moeda" class="form-label">Moedas</label>
            <input type="number" name="Moeda" placeholder="Digite o Valor em Moedas" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label for="Quantidade" class="form-label">Quantidade</label>
            <input type="number" name="Quantidade" placeholder="Digite a Quantidade" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Status" class="form-label">Status</label>
            <input type="number" name="Status" placeholder="Escolha o Status" class="form-control" />
        </div>

        <!-- Campo específico de produto físico -->
        <div class="mb-3">
            <label for="Peso" class="form-label">Peso (gramas)</label>
            <input type="number" name="Peso" placeholder="Digite o Peso" class="form-control" />
        </div>

        

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/produto/read">Voltar</a>
    </form>

</body>
</html>
