@model StarCoins.Models.ProdutoDigital

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Produto Digital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">

    <h2>Produto Digital</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/produto/read">Produto</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar Produto Digital</li>
        </ol>
    </nav>

    <form action="/produto/updateDigital/@Model.ProdutoId" method="POST" class="col offset-md-2 col-8">
        <th scope="col">Nome</th>
        <input placeholder="Nome" name="Nome" class="form-control" value="@Model.Nome"/><br>
        <th scope="col">Descrição</th>
        <input placeholder="Descrição" name="Descricao" class="form-control" value="@Model.Descricao"/><br>
        <th scope="col">Quantidade</th>
        <input placeholder="Quantidade" name="Quantidade" class="form-control" value="@Model.Quantidade"/><br>
        <th scope="col">Moeda</th>
        <input placeholder="Moeda" name="Moeda" class="form-control" value="@Model.Moeda"/><br>
        <th scope="col">Status</th>
        <input placeholder="Status" name="Status" class="form-control" value="@Model.Status"/><br>
        
        <!-- Campo específico para produto digital -->
        <th scope="col">Tamanho do arquivo (MB)</th>
        <input placeholder="TamanhoArquivo" name="TamanhoArquivo" class="form-control" value="@Model.TamanhoArquivo"/><br>

        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/produto/read">Voltar</a>
    </form>

</body>
</html>
