@model List<StarCoins.Models.Atividade>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atividades</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">


<div class="text-center">
    <h2>Atividades</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Moeda</th>
                <th scope="col">Data de Entrega</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
    @foreach(var atividade in Model) {
        <tr>
            <td>@atividade.AtividadeId</td>
            <td>@atividade.Nome</td>
            <td>@atividade.Descricao</td>
            <td>@atividade.Moeda</td>
            <td>@atividade.DataEntrega.ToString("dd/MM/yyyy")</td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="/alunoatividade/index/@atividade.AtividadeId" button type="button" class="btn btn-outline-info btn-sm">Detalhe</a>
                    <a href="/atividade/update/@atividade.AtividadeId" button type="button" class="btn btn-outline-primary btn-sm">Editar</a>
                    <a href="/atividade/delete/@atividade.AtividadeId" button type="button" class="btn btn-outline-danger btn-sm"> Apagar</a>
                </div>
            </td>
        </tr>
    }
      </tbody>
    </table>

<a class="btn btn-primary" href="/atividade/create">Adicionar</a>
</div>
</body>
</html>