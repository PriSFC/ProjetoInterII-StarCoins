@model StarCoins.Models.Atividade

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Atividade</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body class="container">

    <h2>Atividade</h2>

    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="atividade/read/">Atividade</a></li>
        <li class="breadcrumb-item active" aria-current="page">Editar um Atividade</li>
    </ol>
    </nav>

    <form action="/atividade/update/@Model.AtividadeId" method="POST" class="col offset-md-2 col-8"> 
        <th scope="col">Nome</th>
        <input placeholder="Nome" name="Nome" class="form-control" value="@Model.Nome"/><br>
        <th scope="col">Descrição</th>
        <input placeholder="Descricao" name="Descricao" class="form-control" value="@Model.Descricao"/><br>
        <th scope="col">Moeda</th>
        <input placeholder="Moeda" name="Moeda" class="form-control" value="@Model.Moeda"/><br>
        <th scope="col">Data de Entrega</th>
        <input placeholder="DataEntrega" name="DataEntrega" class="form-control" type="date" value="@Model.DataEntrega.ToString("yyyy-MM-dd")"/><br>
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/atividade/read">Voltar</a>
    </form>


</body>
</html>